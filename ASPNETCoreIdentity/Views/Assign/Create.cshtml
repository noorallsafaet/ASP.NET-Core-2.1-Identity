@model ASPNETCoreIdentity.Models.ViewModel.UserWithRoleViewModels
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Assign Role</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserId" class="col-md-2 control-label">User</label>
            <div class="col-md-10">
                <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control" ></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @for (int i = 0; i < Model.Roles.Count(); i++)
                {
                    <input type="checkbox" asp-for="@Model.Roles[i].Selected" />
                    <label asp-for="@Model.Roles[i].Selected">@Model.Roles[i].Text</label>
                    <input type="hidden" asp-for="@Model.Roles[i].Value" />
                    <input type="hidden" asp-for="@Model.Roles[i].Text" />

                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
